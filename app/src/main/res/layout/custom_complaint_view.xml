<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:id="@+id/rsab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:orientation="vertical"
            android:weightSum="5"
            android:paddingLeft="10dp"
            android:background="@color/white"
            >
            <!--Row 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="10"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:text="Academic"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:id="@+id/complaintType"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="12-1-2019"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/complaintDate"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginBottom="20dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Lorem Ipusm dkflsjafkljsd fjsdfklsdjfsdkf fksdkfjlsdjfjksdklfjsdklafjklasdjf sadklfjasdkljfklasdfklasdf fsdkjfklsdafsdfsf ksdlfjlaksdf klasdfjklasdjfklasdf aksj"
                    android:id="@+id/complaintDetails"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>