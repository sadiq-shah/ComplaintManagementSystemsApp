<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="8"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/complaints2"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complaints"
            android:textSize="27sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:id="@+id/layoutTotalComplaints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:id="@+id/totalComplaints"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Complaints"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:paddingTop="20dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/complaint"
                    android:layout_marginLeft="150dp"/>
            </LinearLayout>
        </LinearLayout>

        
        
        <!--Row 2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:weightSum="2"
            android:orientation="horizontal">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:background="@color/lightRed"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:clickable="true"
                android:id="@+id/layoutOpenComplaints">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/openComplaints"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Open Complaints"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:layout_marginLeft="15dp"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/open_complaints"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:background="@color/darkGreen"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:clickable="true"
                android:id="@+id/layoutClosedComplaints">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/closeComplaints"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Closed Complaint"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:layout_marginLeft="15dp"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/closed_complaints"/>
                </LinearLayout>

            </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:weightSum="3"
            android:orientation="vertical">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Feedbacks"
              android:textStyle="bold"
              android:textSize="22sp"
              android:paddingTop="30dp"
              android:gravity="center_horizontal"/>

            <!--Row 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/custom_background"
                    android:clickable="true"
                    android:id="@+id/layoutPositiveFeebacks"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15"
                        android:textColor="@color/darkGreen"
                        android:textSize="24sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/positiveFeebacks"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Positive Feedbacks"
                            android:textSize="18sp"
                            android:textColor="@color/darkGreen"
                            android:layout_weight="1"
                            android:paddingTop="15dp"
                            android:layout_marginLeft="15dp"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/thumbs_up"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/custom_background"
                    android:clickable="true"
                    android:id="@+id/layoutNegativeFeedbacks">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15"
                        android:textColor="@color/lightRed"
                        android:textSize="24sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"

                        android:id="@+id/negativeFeedbacks"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Negative Feedback"
                            android:textSize="18sp"
                            android:textColor="@color/lightRed"
                            android:layout_weight="1"
                            android:paddingTop="15dp"
                            android:layout_marginLeft="15dp"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/thumbs_down"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>